{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start NestJS Debug (TS)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:debug"],
      "args": ["src/main.ts"],
      "autoAttachChildProcesses": true,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**"
      ]
    }
  ]
}
